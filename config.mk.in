# HaskellDB configuration file. configure will produce config.mk from this file
# @configure_input@

PACKAGE_VERSION = @PACKAGE_VERSION@

CC = @CC@

GHC = @GHC@
GHCI = @GHCI@
GHC_PKG = @GHC_PKG@
GHCFLAGS = @GHCFLAGS@
GHC_DIR = @GHC_DIR@

HUGS = @HUGS@
RUNHUGS = @RUNHUGS@
HUGSFLAGS = @HUGSFLAGS@
HUGS_DIR = @HUGS_DIR@

HADDOCK = @HADDOCK@

WIN32=@WIN32@
AR = @AR@
LD = @LD@
INSTALL = @INSTALL@
LDFLAGS = @LDFLAGS@

PACKAGE_DEPS = @PACKAGE_DEPS@

#
# Installation directories
#

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = $(exec_prefix)/bin

#
# Documentation
#

BUILD_DOC=@BUILD_DOC@

#
# Which compilers to build libraries for
#

ENABLE_GHC = @ENABLE_GHC@
ENABLE_HUGS = @ENABLE_HUGS@

ifeq "$(ENABLE_GHC)" "yes"
COMPILERS += ghc
endif

ifeq "$(ENABLE_HUGS)" "yes"
COMPILERS += hugs
endif

#
# HSQL stuff
#

WITH_GHC_HSQL = @WITH_GHC_HSQL@
WITH_HUGS_HSQL = @WITH_HUGS_HSQL@

WITH_GHC_HSQL_ODBC = @WITH_GHC_HSQL_ODBC@
WITH_GHC_HSQL_MYSQL = @WITH_GHC_HSQL_MYSQL@
WITH_GHC_HSQL_SQLITE = @WITH_GHC_HSQL_SQLITE@
WITH_GHC_HSQL_POSTGRESQL = @WITH_GHC_HSQL_POSTGRESQL@

WITH_HUGS_HSQL_ODBC = @WITH_HUGS_HSQL_ODBC@
WITH_HUGS_HSQL_MYSQL = @WITH_HUGS_HSQL_MYSQL@
WITH_HUGS_HSQL_SQLITE = @WITH_HUGS_HSQL_SQLITE@
WITH_HUGS_HSQL_POSTGRESQL = @WITH_HUGS_HSQL_POSTGRESQL@

#
# WxHaskell stuff
#

WITH_GHC_WX = @WITH_GHC_WX@
WITH_HUGS_WX = @WITH_HUGS_WX@

#
# BoundedString
#

WITH_BOUNDEDSTRING = @WITH_BOUNDEDSTRING@

ifeq "$(WITH_BOUNDEDSTRING)" "yes"
HSPP_FLAGS += -DWITH_BOUNDEDSTRING
endif

#
# Preprocessing
#

HSPP = $(TOP_DIR)/preprocess 

#
# Include local HaskellDB dirs
#

SRC_DIR = $(TOP_DIR)/src

BUILD_DIR = $(TOP_DIR)/build



